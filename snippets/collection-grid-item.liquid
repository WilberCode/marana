{% if num_per_row == 2 %}{% capture col_class %}half{% endcapture %}
{% elsif num_per_row == 3 %}{% capture col_class %}third{% endcapture %}
{% elsif num_per_row == 5 %}{% capture col_class %}fifth{% endcapture %}
{% else %}{% capture col_class %}quarter{% endcapture %}{% endif %}

<div class="prod-block coll-block column reveal-candidate {{ col_class }}">

  <div class="prod-image-wrap">
    <a href="{{ collection.url }}">
      {% if collection.image %}
	      {% include 'responsive-image', image: collection.image %}
      {% else %}
	      {% include 'responsive-image', image: collection.products.first.featured_media.preview_image %}
      {% endif %}
    </a>
  </div>

  <div class="prod-caption">
    <a href="{{ collection.url }}">
    


      <div class="prod-caption-content">
        <div>
            <div class="title">
              {{ collection.title }}
            </div>
            {% if collection.all_products_count == 1 %}
              <p>1 producto</p>
            {% else %}
              <p> {{ collection.all_products_count }} productos</p>
            {% endif %}
        </div>
        
        <button class="prod-caption-content__btn" aria-label="Comprar">
              <span> {{ section.settings.collection_button_text | t}} </span>
            <svg class="icon icon--medium rtl-flip-x" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 15L15 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
              <path d="M6.875 5H15V13.125" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
          </button>
      </div>
      
    </a>
  </div>
</div>